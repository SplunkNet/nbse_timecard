        <script><![CDATA[/*
 * Author: Gulzar Manuja - 02/10/20
 * This Business Rule will associate all the default Project Work Types with each and every new Project created by user.
 */

(function executeRule(current, previous /*null when async*/) {
	
	// Add your code here
	var gr = new GlideRecord('x_nyk_nbse_time_ca_nbse_project_work_type');
	gr.addQuery('default','true');
	gr.query();
	
	var project = new GlideRecord('x_nyk_nbse_time_ca_m2m_nbse_projec_nbse_project');
	while(gr.next()){
		project.initialize();
		project.projects = current.sys_id;
		project.project_work_type = gr.sys_id;
		var sysID = project.insert();
		//if (!sysID) gs.warn('Failed to create Assignment (project: '+a.getValue('project')+', work type: '+a.getValue('project_work_type')+') for timesheet: '+current.timesheet);
	}

})(current, previous);]]></script>
